<style lang="scss">
	.hero {
        background-size: 100% 100%;
background-position: 0px 0px,0px 0px;
background-image: radial-gradient(75% 75% at 50% 50%, #44a1ff 0%, #1f85eb 100%);
        z-index: 0;   
        color: --blue;
    }

    .hero-container {
        width: 100vw;
        height: 65vh;
        position: relative;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        width: 100%;
        height: 100%;
    
        &:after{
            background:url("data:image/svg+xml;base64,");
            width: 100%;
            height: 100%;
            top:0;
            mix-blend-mode: plus-lighter;
            opacity: .3;
            content: '';
            position: absolute;
        }
    }

    .content {
        color: #f4f4f9;
    }

    .offset {
        position: absolute;
        top:3px;
        left: 4px;
        filter: blur(2px);
    }

    .circles {
        position: absolute;
        width: 400px;
        height: 300px;
        filter: blur(80px);
        opacity: 1;

        &.left {
            top: -100px;
            left: -70px;
            transform: rotate(180deg);
        }
        &.right{
            bottom: 0px;
            right: -25px;
            transform:scale(150%);
        }
    }

    .circle {
        position: absolute;
        width:215px;
        height: 215px;
        border-radius: 50%;
        margin: 0;
        transform: translate(0%, 0%); /* Center within parent */
        transition: transform 1s ease-in-out; /* Smooth animation */
        filter:contrast(4);
        &:hover {
            transform: translate(calc(-20% + 15px), calc(-50% + 15px)); 
        }
    }

    .circle-1 {
        bottom: -15px;
        right: -105px;
        width:290px;
        height: 290px;
        background-color: #2977ed;
        opacity: .8;
        -webkit-animation: cornercircle 6s ease infinite;
        -moz-animation: cornercircle 6s ease infinite;
        animation: cornercircle 6s ease-in-out infinite;

        &.left{
            -webkit-animation: cornercircle 12s ease infinite;
            -moz-animation: cornercircle 12s ease infinite;
            animation: cornercircle 12s ease-in-out infinite;
        }
    }

    .circle-2 {
        bottom: -20px;
        right: 25px;
        width:215px;
        height: 215px;
        background-color: #f35252;
    }


    .circle-3 {
        bottom: -50px;
        right: 75px;
        width:215px;
        height: 215px;
        background-color: #2ff588;
        -webkit-animation: centercircle 16s ease infinite;
        -moz-animation: centercircle 16s ease infinite;
        animation: centercircle 16s ease-in-out infinite;
        &.left{
            -webkit-animation: centercircle 24s ease infinite;
            -moz-animation: cornercircle 24s ease infinite;
            animation: cornercircle 24s ease-in-out infinite;
        }
    }

    .circle-4 {
        bottom: -100px;
        right: 175px;
        width:215px;
        height: 215px;
        background-color: #f083a0;
        -webkit-animation: interiorcircle 12s ease-in-out infinite;
        -moz-animation: interiorcircle 12s ease-in-out infinite;
        animation: interiorcircle 12s ease-in-out infinite;
         &.left{
            -webkit-animation: interiorcircle 16 ease infinite;
            -moz-animation: interiorcircle 16s ease infinite;
            animation: interiorcircle 16s ease-in-out infinite;
        }
    }


    // Corner Circle Animation 
    @keyframes cornercircle {
        0%{bottom: -15px; right: -105px; opacity: .8; }
        50%{bottom: -50px; right: -125px; opacity: 1; }
        100%{bottom: -15px; right: -105px; opacity: .8; }
    }

    @-webkit-keyframes cornercircle {
        0%{bottom: -15px; right: -105px; opacity: .8; }
        50%{bottom: -50px; right: -125px; opacity: 1; }
        100%{bottom: -15px; right: -105px; opacity: .8; }
    }

    @-moz-keyframes cornercircle {
        0%{bottom: -15px; right: -105px; opacity: .8; }
        50%{bottom: -50px; right: -125px; opacity: 1; }
        100%{bottom: -15px; right: -105px; opacity: .8; }
    }

    // Interior Circle

    @keyframes interiorcircle {
        0%{bottom: -100px; right: 175px; opacity: .8; }
        50%{bottom: -50px; right: 100px; opacity: 1; }
        100%{bottom: -100px; right: 175px; opacity: .8; }
    }

    @-webkit-keyframes  interiorcircle {
        0%{bottom: -100px; right: 175px; opacity: .8; }
        50%{bottom: -50px; right: 100px; opacity: 1; }
        100%{bottom: -100px; right: 175px; opacity: .8; }
    }

    @-moz-keyframes interiorcircle {
        0%{bottom: -100px; right: 175px; opacity: .8; }
        50%{bottom: -50px; right: 100px; opacity: 1; }
        100%{bottom: -100px; right: 175px; opacity: .8; }
    }
    
    // Center Circle

    @keyframes centercircle {
        0%{bottom: -50px; right: 175px; }
        50%{bottom: 0px; right: 100px;  }
        100%{bottom: -50px; right: 175px; }
    }

</style>
